// region: shared with impl

#include "include/config.h"

// endregion: shared

// region: Interface

#ifndef DISABLE_TEST_CODE

#include "test/test_proxy.h"

#define INTERFACE_DEFINITION_PHASE
#include "test/interface.h"
$0
BEGIN_NAMESPACE_PLACEHOLDER
namespace fto {

#define $1_METHODS

class ${1:ClassName} {
 public:
  virtual ~$1() = default;

  $1_METHODS
};

#define $1Factory_METHODS             \
  SNAIL_CONST_INTERFACEX(createInstance, xxx());

class $1Factory {
 public:
  virtual ~$1Factory() = default;

  $1Factory_METHODS
};

}  // namespace fto
END_NAMESPACE_PLACEHOLDER

#undef INTERFACE_DEFINITION_PHASE

#else  // DISABLE_TEST_CODE

BEGIN_NAMESPACE_PLACEHOLDER
namespace fto {

class $1 { };

}  // namespace fto
END_NAMESPACE_PLACEHOLDER

#endif  // DISABLE_TEST_CODE
// endregion: Interface

// region: TestProxy
#ifndef DISABLE_TEST_CODE

#include "test/test_proxy.h"

#define INTERFACE_TEST_PROXY_PHASE
#include "test/interface.h"

BEGIN_NAMESPACE_PLACEHOLDER
namespace fto {

class $1TestProxy {
  TEST_PROXY_BASE($1);
  TEST_PROXY_DISABLE_COPY_CONSTRUCT($1);
  TEST_PROXY_DISABLE_COPY_ASSIGNMENT($1);
  TEST_PROXY_DISABLE_MOVE_CONSTRUCT($1);
  TEST_PROXY_DISABLE_MOVE_ASSIGNMENT($1);
  TEST_PROXY_ENABLE_FACTORY_SUPPORT($1);
  TEST_PROXY_DISABLE_SWAP($1);

 public:
  $1_METHODS
};

}  // namespace fto
END_NAMESPACE_PLACEHOLDER

#undef INTERFACE_TEST_PROXY_PHASE
#endif  // DISABLE_TEST_CODE

// endregion: TestProxy

// region: Mocks

#include "fto_${1:$(un-camelcase-string yas-text)}.h"

#define INTERFACE_MOCK_PHASE
#include "test/interface.h"

BEGIN_NAMESPACE_PLACEHOLDER
namespace tests {

class Mock$1 : public fto::$1 {
 public:
  $1_METHODS
};

class Mock$1Factory
    : public fto::$1Factory {
 public:
  Mock$1Factory() {
    fto::$1TestProxy::setFactory(this);
  }

  virtual ~Mock$1Factory() {
    fto::$1TestProxy::setFactory(nullptr);
  }

  $1Factory_METHODS
};

}  // namespace tests
END_NAMESPACE_PLACEHOLDER

#undef INTERFACE_MOCK_PHASE

// endregion: Mocks
